<%- include('./adminHeader.ejs') %>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deleted Brands</h4>
            <p class="card-description">Add class <code>.table-striped</code></p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Brand Name</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i < brands.length; i++) { %>             
                            <tr>
                                <td style="color: aliceblue;"><%= i+1 %></td>
                                <td style="color: aliceblue;"><%= brands[i].name %></td>
                                <td style="color: aliceblue;"> 
                                    <button class="btn btn-success restore-btnC" style="background-color: green;" data-id="<%= brands[i]._id %>">Restore</button>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div style="margin-left: 75%; margin-top: 2%;">
    <button type="button" class="btn" style="background-color: rgb(15, 150, 188);">
        <a href="/admin/brands" style="text-decoration: none;color: rgb(0, 0, 0);">Back</a>
    </button>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.restore-btnC').forEach(button => {
            button.addEventListener('click', function() {
                const brandId = this.getAttribute('data-id');
            
                Swal.fire({
                    title: 'Are you sure?',
                    text: "Do you really want to recover this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, Recover it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/admin/brandrecover?id=${brandId}`, {
                            method: 'GET',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        })
                        .then(response => {
                            console.log('Fetch response:', response); 
                            if (response.ok) {
                                Swal.fire(
                                    'Recovered!',
                                    'The brand has been recovered.',
                                    'success'
                                ).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'Error!',
                                    'There was an error recovering the brand.',
                                    'error'
                                );
                            }
                        })
                        .catch(error => {
                            console.error('Fetch error:', error); 
                            Swal.fire(
                                'Error!',
                                'There was an error recovering the brand.',
                                'error'
                            );
                        });
                    }
                });
            });
        });
    });
</script>



