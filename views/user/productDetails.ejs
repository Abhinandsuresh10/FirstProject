<style>

    
.zoom-container {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: auto;
}

.zoomed-image {
    position: absolute;
    top: 0;
    left: 0;
    display: none;
    width: 200%; 
    height: 200%; 
    background-repeat: no-repeat;
    background-size: 100% 100%;
    z-index: 999;
}

.zoom-container:hover .zoomed-image {
    display: block;
}

.image-thumbs {
    display: flex;
    justify-content: flex-start; 
    gap: 10px; 
}

.thumb {
    flex: 0 0 auto; 
    cursor: pointer;
}

.thumb img {
    max-width: 60px;
    height: auto;
    border: 1px solid #ccc; 
}

.main-image {
    max-width: 100%; 
    height: auto;
