        display: flex;
        justify-content: center;
        margin-top: 20px;
    }
    .pagination a {
        padding: 10px 15px;
        margin: 0 5px;
        border: 1px solid #ddd;
        border-radius: 5px;
        color: #000000;
        text-decoration: none;
    }
    .pagination a.active {
        background-color: #000000;
        color: white;
    }
    .pagination a.disabled {
        color: #ccc;
        cursor: not-allowed;
    }
    </style>
