<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

<style>
    /* General Styling */
    body {
        background-color: #f0f2f5;
        font-family: 'Arial', sans-serif;
    }
    
    /* Wallet Section Styling */
    .wallet-card, .transaction-card, .add-funds-card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: none;
        overflow: hidden;
    }
    
    .wallet-card {
        background: linear-gradient(135deg, #8f9adb, #d7a0d7);
        color: white;
    }
    
    .transaction-card, .add-funds-card {
        background-color: #ffffff;
    }
    
    .card-title {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }
    
    .balance-text {
        font-size: 2rem;
        font-weight: bold;
    }
    
    .table thead {
        background-color: #3a4da9;
        color: white;
    }
    
    .table tbody tr {
        transition: background-color 0.3s ease;
    }
    
    .table tbody tr:hover {
        background-color: #f0f2f5;
    }
    
    .btn-primary {
        background-color: #3a4da9;
        border-color: #3a4da9;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }
    
    .btn-primary:hover {
        background-color: #1f2b6c;
        border-color: #1f2b6c;
    }
    
    </style>

<!-- Wallet Section Start -->
<section id="wallet" class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4 text-center">My Wallet</h2>

            <!-- Wallet Card -->
            <div class="wallet-card card mb-4">
                <div class="card-body">
                    <h4 class="card-title text-center">Wallet Balance</h4>
                    <ul class="list-group text-center">
                        <% wallets.forEach(function(wallet) { %>
                            <li class="list-group-item">
                                <span class="balance-text">₹ <%= wallet.balance.toFixed(2) %></span>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>

            <!-- Transaction History Card -->
            <div class="transaction-card card mb-4">
                <div class="card-body">
                    <h4 class="card-title text-center">Transaction History</h4>
                    <div class="table-responsive">
                        <table class="table text-center">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% wallets.forEach(function(wallet) { %>
                                    <% wallet.transactions.forEach(function(transaction) { %>
                                        <tr>
                                            <td><%= transaction.date.toLocaleDateString() %></td>
                                            <td><%= transaction.description %></td>
                                            <td>₹ <%= transaction.amount.toFixed(2) %></td>
                                        </tr>
                                    <% }); %>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Add Funds Card -->
            <div class="add-funds-card card mb-4">
                <div class="card-body">
                    <h4 class="card-title text-center">Add Funds</h4>
                    <form id="addFundsForm">
                        <div class="form-group">
                            <label for="amount">Amount</label>
                            <input type="number" class="form-control" id="amount" name="amount" min="0.01" step="0.01" required>
                        </div>
                        <button type="button" class="btn btn-primary w-100" id="rzp-button1">Add Funds</button>
                    </form>
                </div>
            </div>  
        </div>
    </div>
</section>
<div style="height: 110px;"></div>


