  <script>
  document.addEventListener('DOMContentLoaded', function() {
      const searchButton = document.getElementById('search-button');
      const searchInput = document.getElementById('search-input');
      const productItems = document.querySelectorAll('.product-item');

      searchButton.addEventListener('click', function() {
          const query = searchInput.value.toLowerCase();
          filterProducts(query);
      });

      searchInput.addEventListener('keyup', function(event) {
          if (event.key === 'Enter') {
              const query = searchInput.value.toLowerCase();
              filterProducts(query);
          }
      });

      function filterProducts(query) {
          productItems.forEach(item => {
              const productName = item.querySelector('h3').innerText.toLowerCase();
              
              if (productName.includes(query)) {
                  item.style.display = 'block';
              } else {
                  item.style.display = 'none';
              }
          });
      }
  });
  </script>





  <script>
  document.addEventListener('DOMContentLoaded', function() {
      const priceRange = document.getElementById('priceRange');
      const minPrice = document.getElementById('minPrice');
      const maxPrice = document.getElementById('maxPrice');
      const productContainer = document.getElementById('productContainer');
      const productItems = document.querySelectorAll('.product-item');
      const brandCheckboxes = document.querySelectorAll('.brand-checkbox');

      function filterProducts() {
          const max = parseInt(priceRange.value, 10);
          const selectedBrands = Array.from(brandCheckboxes)
                                      .filter(checkbox => checkbox.checked)
                                      .map(checkbox => checkbox.value);
          maxPrice.textContent = `₹${max}`;
          
          productItems.forEach(item => {
              const price = parseInt(item.getAttribute('data-price'), 10);
              const brand = item.getAttribute('data-brand'); 
              
              const withinPriceRange = price <= max;
              const brandMatches = selectedBrands.length === 0 || selectedBrands.includes(brand);
              
              if (withinPriceRange && brandMatches) {
                  item.style.display = 'block'; 
              } else {
                  item.style.display = 'none'; 
              }
          });
      }

      priceRange.addEventListener('input', filterProducts);
      brandCheckboxes.forEach(checkbox => checkbox.addEventListener('change', filterProducts));

      filterProducts();
  });
  </script>
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    const categoryCheckboxes = document.querySelectorAll('.category-checkbox');
    const productItems = document.querySelectorAll('.product-item');

    function filterProducts() {
        const selectedCategories = Array.from(categoryCheckboxes)
                                        .filter(checkbox => checkbox.checked)
                                        .map(checkbox => checkbox.value);
        
        productItems.forEach(item => {
            const categories = item.getAttribute('data-category').split(','); 
            
            const matchesCategory = selectedCategories.length === 0 || selectedCategories.some(cat => categories.includes(cat));
            
            if (matchesCategory) {
                item.style.display = 'block'; 
            } else {
                item.style.display = 'none'; 
            }
        });
    }

    categoryCheckboxes.forEach(checkbox => checkbox.addEventListener('change', filterProducts));
    
    filterProducts(); // Initial filter to set the correct visibility
  });

  </script>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
        const sortOptions = document.getElementById('sortOptions');
        const productContainer = document.getElementById('productContainer');
        const productItems = Array.from(document.querySelectorAll('.product-item'));
    
        sortOptions.addEventListener('change', function() {
            const sortValue = sortOptions.value;
            sortProducts(sortValue);
        });
    
        function sortProducts(sortValue) {
            let sortedItems;
    
            if (sortValue === 'az') {
                sortedItems = productItems.sort((a, b) => {
                    const nameA = a.querySelector('h3 a').innerText.toUpperCase();
                    const nameB = b.querySelector('h3 a').innerText.toUpperCase();
                    return nameA.localeCompare(nameB);
                });
            } else if (sortValue === 'za') {
                sortedItems = productItems.sort((a, b) => {
                    const nameA = a.querySelector('h3 a').innerText.toUpperCase();
                    const nameB = b.querySelector('h3 a').innerText.toUpperCase();
                    return nameB.localeCompare(nameA);
                });
            } else {
                sortedItems = productItems;
            }
    
            productContainer.innerHTML = '';
            sortedItems.forEach(item => productContainer.appendChild(item));
        }
    });
    </script>
    

